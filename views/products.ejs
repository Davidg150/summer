<% include ../partials/header %>
		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Banner -->
					<section id="intro" class="main">
						<span class="icon fa-diamond major"></span>
						<h2>Here is all of our cars!</h2>
						
						<div class="grid-container">
							
								<% result.forEach(function(product) { %>
								
									<div class="item">     
										 <div class="item">
											<h1 class="itemtitle">Id: <%= product.Id %> </h1>
											<h1 class="itemp">Name: <%= product.Name %></h1>
											 <p class="itemp">Price: <%= product.Price %></p>
                                             <p class="itemp">Extras: <%= product.Extras %></p>
                                             <img src="/<%= product.Image %>" class="pimage" />
											 <a href="/editproduct/<%= product.Id %>" class="button">Edit me</a>
									<p class="button" id="doit<%= product.Id %>">Delete</a>
									 <p id="yes<%= product.Id %>"  style="display:none">
											 Are you sure?
											 <a href="/delete/<%= product.Id %>" class="button">Confirm</a>
						 </p>
						 <script>
						  $(document).ready(function(){
								$("#doit<%= product.Id %>").click(function(){
								$("#yes<%= product.Id %>").slideToggle(2000);

								})

						  })
						 
						 </script>
											 </div>
											
											</div>
											<% }); %>
                                            						</div>
					  
                                                                    <a href="/addproduct" class="button">Add New Product</a>
		
				<% include ../partials/footer %>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/skel.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>